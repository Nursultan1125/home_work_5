<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">#000</item>
    </style>

    <style name="Button" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:width">200dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:height">100dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:topLeftRadius">10dp</item>
    </style>

    <style name="MiddleText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">30dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BigText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">50dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>



</resources>